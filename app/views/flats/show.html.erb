<%= stylesheet_link_tag 'flats', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="jumbotron jumbotron-fluid myback" style="background-image: linear-gradient(225deg, rgba(250, 250, 250, 0.2), rgba(250, 250, 250, 1)), url(<%= @flat.img_path %>)" >
  <h1><%= @flat.name %></h1>
  </div>

<div class="d-flex justify-content-around align-items-start">
  <div class="card shadow mysecondcontainer mt-4">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src=<%= @flat.img_path %> class="card-img-top" alt="">
          </div>
          <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= @flat.name %></h5>
          <p class="card-text"><%= @flat.address %></p>
          <p class="card-text"><%= @flat.description %></p>
          <p class="card-text"><i class="fas fa-male"></i>   <%= @flat.number_of_guests %></p>
          <p class="card-text"><i class="fas fa-euro-sign"></i>   <%= @flat.price_per_night %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<br><br><br><br>
<br><br>

<%= link_to "edit this flat", edit_flat_path(@flat), class: "btn btn-primary"%>
<%= link_to "<<<all flats", flats_path, class: "btn btn-primary"%>
